<Window x:Class="PGMConvolutionFilter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PGMConvolutionFilter"
        mc:Ignorable="d"
        Title="Convolution filter" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="tabControl_SelectionChanged">
                <TabItem x:Name="logsAndOptionsTabItem" Header="Logs and options"/>
                <TabItem x:Name="textResultsTabItem" Header="Text results"/>
                <TabItem x:Name="imageResultsTabItem" Header="Image results"/>
                <TabItem x:Name="asynchronousMethodsTabItem" Header="Choose asynchronous method"/>
            </TabControl>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"></Frame>
        </StackPanel>
    </Grid>
</Window>
